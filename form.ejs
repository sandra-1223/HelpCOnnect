              <input type="text" class="form-control" id="desc" placeholder="Enter Description" name="desc">
            </div>
            <div class="mb-3">
              <label  class="form-label">NGO:</label>
              <input type="text" class="form-control" id="ngo_id" placeholder="Enter NGO ID" name="ngo_id">
            </div>
            <div class="mb-3">
                <label  class="form-label">Type:</label>
                <select class="form-select" id="type" name="type">
                    <option>Select</option>
                    <option>Clothes&Shelter</option>
                    <option>Groceries</option>
                    <option>Education</option> 
                  </select>
            </div><br>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    </div>


