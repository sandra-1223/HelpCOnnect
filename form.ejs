<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="logo.png" alt="Avatar Logo" style="width:6vw; margin-left: 2vw;"> 
            </a>
            <ul class="navbar-nav">
              <li class="nav-item">
                <button type="button" class="btn btn-outline-white" style="color: rgb(255, 255, 255); margin-left: 60vw;" href="#">Home</a>
              </li>
              <li class="nav-item">
                <button type="button" class="btn btn-outline-white" style="color: rgb(255, 255, 255); margin-left: 2vw;" href="#">Request</a>
              </li>
